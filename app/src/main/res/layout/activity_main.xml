<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/height_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_high"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:text=" "
    />

    <com.neobaran.open.android.nruler.RulerView
        android:id="@+id/height_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        app:numShow="8"
        app:numDigits="0"
        app:numValue="4"
        app:numMinValue="0"
        app:numMaxValue="8"
        app:numDefaultValue="4"
        app:numTextColor="@color/secondary_text"
        app:textSize="12sp"
        app:textSpaceHeight="6dp"
        app:centerLineColor="#f24b16"
        app:sideLineColor="#bcbcbc"
        app:centerLineHeight="16dp"
        app:sideLineHeight="8dp"
        />

    <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_high"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text=" "
    />

    <com.neobaran.open.android.nruler.RulerView
        android:id="@+id/tv_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        app:numShow="15"
        app:numDigits="0"
        app:numValue="15"
        app:numMinValue="0"
        app:numMaxValue="30"
        app:numDefaultValue="15"
        app:numTextColor="@color/secondary_text"
        app:textSize="12sp"
        app:textSpaceHeight="6dp"
        app:centerLineColor="#f24b16"
        app:sideLineColor="#bcbcbc"
        app:centerLineHeight="16dp"
        app:sideLineHeight="8dp"
        />

    <TextView
        android:id="@+id/iso_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_high"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text=" "
        />

    <com.neobaran.open.android.nruler.RulerView
        android:id="@+id/iso_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        app:numShow="7"
        app:numDigits="0"
        app:numValue="8"
        app:numMinValue="0"
        app:numMaxValue="15"
        app:numDefaultValue="8"
        app:numTextColor="@color/secondary_text"
        app:textSize="12sp"
        app:textSpaceHeight="6dp"
        app:centerLineColor="#f24b16"
        app:sideLineColor="#bcbcbc"
        app:centerLineHeight="16dp"
        app:sideLineHeight="8dp"
        />


</LinearLayout>